# Lane Detection API Configuration
# Copy this file to settings.env and modify as needed

# Environment settings
ENVIRONMENT=development
DEBUG=true

# API server configuration
HOST=0.0.0.0
PORT=8000

# Image processing limits
MAX_IMAGE_MB=10.0

# OpenCV pipeline parameters
CANNY_LOW=50
CANNY_HIGH=150
GAUSSIAN_KERNEL=5
HOUGH_THRESHOLD=15
HOUGH_MIN_LINE_LENGTH=40
HOUGH_MAX_LINE_GAP=20

# ROI parameters (as ratios of image dimensions)
ROI_BOTTOM_WIDTH=0.9
ROI_TOP_WIDTH=0.1
ROI_HEIGHT=0.6

# Performance thresholds
PERF_P95_MS=200
