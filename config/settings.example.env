# =======================================================
# OpenCV Lane Detection API - Configuration Settings
# =======================================================
# Copy this file to settings.env and modify as needed
# All variables are optional and have sensible defaults

# =======================================================
# Application Metadata
# =======================================================
APP_NAME="Lane Detection API"
VERSION="0.1.0"

# =======================================================
# Environment and Debugging
# =======================================================
# Environment: development, testing, production, docker
ENVIRONMENT=development

# Enable debug mode (true/false)
DEBUG=true

# =======================================================
# Server Configuration
# =======================================================
# Server host address (0.0.0.0 for all interfaces)
HOST=0.0.0.0

# Server port (1-65535)
PORT=8000

# =======================================================
# Image Processing Configuration
# =======================================================
# Maximum image size in megabytes (0.1-100.0)
MAX_IMAGE_MB=10.0

# =======================================================
# OpenCV Pipeline Parameters
# =======================================================
# Canny edge detection thresholds (10-200 for low, 50-300 for high)
CANNY_LOW=50
CANNY_HIGH=150

# Gaussian blur kernel size (3-15, must be odd)
GAUSSIAN_KERNEL=5

# Hough transform parameters
HOUGH_THRESHOLD=15        # Threshold for line detection (5-50)
HOUGH_MIN_LINE_LENGTH=40  # Minimum line length (10-200)
HOUGH_MAX_LINE_GAP=20     # Maximum gap between line segments (5-100)

# =======================================================
# Region of Interest (ROI) Parameters
# =======================================================
# All ROI parameters are ratios (0.0-1.0) of image dimensions
ROI_BOTTOM_WIDTH=0.9      # Width at bottom of ROI (0.1-1.0)
ROI_TOP_WIDTH=0.1         # Width at top of ROI (0.05-0.5)
ROI_HEIGHT=0.6           # Height of ROI (0.3-0.9)

# =======================================================
# Performance Configuration
# =======================================================
# P95 latency threshold in milliseconds (50-5000)
PERF_P95_MS=200
